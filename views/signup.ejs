<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="icon" type="image/png" href="https://examsavior.net/favicon.png">
    <link rel="icon" type="image/png" href="/images/EXAM SAVIOR (2).png">
    <title>"Create an Account on Exam Savior | Sign Up Today</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap");

      body.signup-page {
        display: flex;
        justify-content: center;
        align-items: center;

        height: 100vh;
        background: #f4f4f4;
        font-family: "Poppins", sans-serif;
        margin: 0;
      }
      .signupclasscontainer {
        width: 350px;
        padding: 40px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative; /* Ensures proper layout */
      }

      /* Heading */
      .signupclasscontainer h1 {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 25px;
      }

      /* Form Container */
      .fieldscontainer {
        display: flex;
        flex-direction: column;
        gap: 15px;
        text-align: left;
      }

      /* Labels */
      .fieldscontainer label {
        font-family: "Nunito", sans-serif;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
        font-size: 14px;
        font-weight: 500;
        color: #555;
      }

      /* Input Fields */
      .fieldscontainer input {
        width: 93%;
        font-family: "Nunito", sans-serif;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
        margin-bottom: 20px;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 14px;
        outline: none;
        transition: 0.3s;
      }

      .fieldscontainer input:focus {
        border-color: #007bff;
        box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.3);
      }

      /* Submit Button */
      .fieldscontainer button {
        margin-top: 15px;
        font-family: "Nunito", sans-serif;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        background: #007bff;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
      }

      .fieldscontainer button:hover {
        background: #0056b3;
      }
      .parallax {
        background: url("/images/o23.png") no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        position: relative;
        transition: transform 0.5s ease-out;
      }

      .parallax-active {
        transform: translateY(-10%);
      }
      .signuppara {
        display: flex;
        height: 80vh;
        width: 90%;
        margin: 5px;
        justify-content: center;
        align-items: center;
        align-content: center;
      }
    </style>
  </head>

  <body class="signup-page">
    <%- include('backbutton') %>
    <div class="signuppara parallax">
      <div class="signupclasscontainer">
        <h1>Join Us Today!</h1>
        <div class="fieldscontainer">
          <form action="/user" method="post">
            <label for="name">Full Name</label>
            <input
              type="text"
              required
              name="name"
              placeholder="Enter your full name"
            />

            <label for="email">Email</label>
            <input
              type="text"
              required
              name="email"
              placeholder="example@domain.com"
            />

            <label for="password">Password</label>
            <input
              type="password"
              required
              name="password"
              placeholder="Choose a secure password"
            />

            <button type="submit">Sign Up</button>
            <% if (locals.error) { %>
              <div style="font-size: 12px; color: red; " class="alert alert-danger" id="error-message">
                  <%= error %>
              </div>
          <% } %>
          </form>
        </div>
      </div>
    </div>

    <script>
      setTimeout(() => {
          const errorDiv = document.getElementById("error-message");
          if (errorDiv) {
              errorDiv.style.display = "none"; // Hide the error after 3 seconds
          }
      }, 4000);
       
  </script>
  </body>
</html>
