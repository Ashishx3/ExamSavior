<body>
    <%- include('backbutton') %>
   <div class="container">
    <h2>Text to Speech <h4 style="color: rgb(0, 126, 168);">by examsavior</h4></h2>

    <textarea id="textInput" rows="4" cols="50" placeholder="Enter text..."></textarea>
    <br>

    <label for="voiceSelect">Select Voice:</label>
    <select id="voiceSelect">
        <option value="oPM3trUCF4e0vTcsrMQr">Default Voice</option>
        <option value="X0Kc6dUd5Kws5uwEyOnL">Male Voice</option>
        <option value="Sm1seazb4gs7RSlUVw7c">Female Voice</option>
    </select>
    <br>

    <button onclick="generateTTS()">Generate</button>
    <button onclick="downloadTTS()" disabled id="downloadBtn">Download</button>

    <br><br>
    <audio id="audioPlayer" controls style="display: none;"></audio>
   </div>

    <script>
        let generatedAudioUrl = "";

        async function generateTTS() {
            const text = document.getElementById("textInput").value;
            const voiceId = document.getElementById("voiceSelect").value;
            const audioPlayer = document.getElementById("audioPlayer");
            const generateButton = document.querySelector("button");
            const downloadButton = document.getElementById("downloadBtn");

            if (!text) {
                alert("Please enter some text.");
                return;
            }

            // Disable buttons while processing
            generateButton.textContent = "Generating...";
            generateButton.disabled = true;
            downloadButton.disabled = true;

            try {
                const response = await fetch("/tts/generate", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ text, voiceId })
                });

                if (!response.ok) throw new Error("Failed to generate speech");

                // Play audio from the stream
                const audioBlob = await response.blob();
                generatedAudioUrl = URL.createObjectURL(audioBlob);
                audioPlayer.src = generatedAudioUrl;
                audioPlayer.style.display = "block";
                audioPlayer.play();

                // Enable download button
                downloadButton.disabled = false;
            } catch (error) {
                alert("Error generating speech. Please try again.");
                console.error(error);
            } finally {
                generateButton.textContent = "Generate";
                generateButton.disabled = false;
            }
        }

        function downloadTTS() {
            if (!generatedAudioUrl) return;

            const link = document.createElement("a");
            link.href = generatedAudioUrl;
            link.download = "generated_speech.mp3";
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
