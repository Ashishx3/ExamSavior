    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

        :root {
  /* Light Theme Variables */
  --light-text-orange: rgb(197, 190, 189);
  --light-bg: rgb(252, 252, 252); /* Background color for light theme */
  --light-text: rgb(31, 41, 55); /* Text color for light theme */
  /* --light-body: #f4f4f4; /* Body color for light theme 
  --light-button: #007bff; Button color for light theme */

  --black-sidebar-darktheme: rgb(0, 0, 0);
  --nav-bg-lightback: rgb(27, 28, 28);
  --darkcolor-forcards: rgb(42, 46, 46);
  --dark-bg: rgb(18 36 43); /* Background color for dark theme */
  --blue-on-darktheme: rgb(104 204 236); /* Text color for dark theme */
   --dark-body: #1e1e1e;
  --dark-button: #1a73e8; 
}
        body {
            overflow-y: hidden;
            font-family: "Inter", Arial, sans-serif;
            background-color: #181818;
            color: white;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        /* LEFT SECTION - PROJECTS */
        .left-container {
            height: 100%;
            width: 55%;
            padding: 20px 40px 0px 40px; /* Moves it a little towards center */
        }

        .heading {
            width: 84%;
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: var(--blue-on-darktheme);
            margin-bottom: 20px;
        }
        .projects-container {
    overflow-y: auto;
    display: flex;
    flex-wrap: wrap;
    height: calc(85vh - 15px);
    width: 45vw;
    gap: 15px;
    justify-content: flex-start; /* Slightly left-aligned */
    padding-right: 10px; /* Prevents content from being hidden by scrollbar */
}

/* Custom Scrollbar */
.projects-container::-webkit-scrollbar {
    width: 8px; /* Thin scrollbar */
    opacity: 0;
    transition: opacity 0.3s;
}
.projects-container:hover::-webkit-scrollbar {
    opacity: 1;
}
.projects-container::-webkit-scrollbar-track {
    background: #001925; /* Dark background */
    border-radius: 10px;
}

.projects-container::-webkit-scrollbar-thumb {
    background: var(--dark-button); /* Orange thumb */
    border-radius: 10px;
    transition: background 0.3s;
}

.projects-container::-webkit-scrollbar-thumb:hover {
    background: var(--dark-button); /* Lighter orange when hovered */
}


        .project {
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            background-color: #282828;
            border-radius: 10px;
            padding: 15px;
            width: 80%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .project:hover {
            transform: scale(1.02);
        }

        .project-thumbnail {
            width: 100px;
            height: 70px;
            background-color: #404040;
            border-radius: 5px;
            margin-right: 15px;
        }
        .project-thumbnail img{
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* background-color: #404040; */
            border-radius: 5px;
            margin-right: 15px;
        }

        .project-info {
            flex-grow: 1;
        }

        .project-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 5px;
            color: var(--blue-on-darktheme);
        }

        .project-description {
            font-size: 14px;
            color: #bbb;
        }

        .view-btn {
            padding: 8px 12px;
            background-color: var(--dark-button);
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .view-btn:hover {
            background-color: var(--blue-on-darktheme);
        }

        /* RIGHT SECTION - DETAILS VIEW */
        .view-container {
            width: 45%;
            background-color: #282828;
            padding: 20px;
            border-left: 3px solid var(--blue-on-darktheme);
            position: absolute;
            right: 0;
            top: 20px; /* Starts 20px from top */
            /* height: 85vh; */
            height: calc(85vh - 10px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .view-title {
            font-size: 24px;
            font-weight: bold;
            color: var(--blue-on-darktheme);
            margin-bottom: 10px;
        }

        .view-content {
            font-size: 16px;
            color: #ddd;
            text-align: center;
        }

        @media (max-width: 768px) {

    body {
        flex-direction: column;
        overflow-y: auto;
        height: auto;
    }
    .heading{
        width: 100%;
        
    }

    .left-container {
        overflow-x: hidden;
        overflow-y: auto;
        width: 100%;
        padding: 20px;
        height: 65Vh;
        padding-top: 39px;
        justify-content: center;
        align-items: center;
        padding-right: 0px;
    }

    .projects-container {
        width: 100%;
        height: auto;
    }

    .project {
        width: 100%;
    }

    .view-container {
        width: 100%;
        position: relative;
        top: unset;
        right: unset;
        height: auto;
        padding: 20px;
        margin-top: 20px;
        border-left: none;
        border-top: 3px solid var(--blue-on-darktheme);
    }
}

@media (max-width: 460px) {
    .heading {
        font-size: 22px;
    }

    .project-title {
        font-size: 18px;
    }

    .view-title {
        font-size: 20px;
    }

    .view-content {
        font-size: 14px;
    }

    .view-btn {
        padding: 6px 10px;
        font-size: 14px;
    }
}
.view-content{
    padding: 5pc;
    overflow-y: auto;
    justify-content: center;
    text-align: center;
    align-items: center;
    font-family: "Inter", Arial, sans-serif;
    font-weight: 400;
    color: white;
}


