    <script>
        function showDetails(title, content) {
            document.getElementById("viewTitle").innerText = title;
            document.getElementById("viewContent").innerText = content;
            document.getElementById("viewDiv").style.justifyContent = "unset"; 

        
        
        }


    </script>

