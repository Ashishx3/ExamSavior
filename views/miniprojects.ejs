    <!-- RIGHT SIDE: DETAILS VIEW -->
    <div class="view-container" id="viewDiv">
        <div class="view-title" id="viewTitle">Select a project</div>
        <div class="view-content" id="viewContent">Click on "View" to see details.</div>
